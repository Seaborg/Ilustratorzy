<%	seconds_ago = Time.now.to_i - Time.at(notification.created_at.to_i).to_i %>
<%	minutes_ago = seconds_ago / 60 %>
<%	hours_ago = minutes_ago / 60 %>
<%	days_ago = hours_ago / 24 %>
<%	weeks_ago = days_ago / 7 %>	

<% if minutes_ago < 1 %>
	<%= seconds_ago %> sekund temu
<% elsif hours_ago < 1 %>
	<%= minutes_ago %> minut temu
<% elsif days_ago < 1 %>
	<%= hours_ago %> godzin temu
<% elsif weeks_ago < 1 %>
	<%= days_ago %> dni temu
<% else %>
	<%= weeks_ago %> tygodni temu
<% end %>