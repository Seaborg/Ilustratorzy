<div id="pic">
  	<% link_to @next do %>
    	<%= image_tag @pic.photo.url(:medium), :alt=>'' %>
	<% end %>
	<div id="picStats">
  		<%= render :partial => "pic_hearts" %>
		<span id="picViews"><b>Obejrzano: </b>
